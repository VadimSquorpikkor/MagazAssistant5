<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="vertical" parent="base_style">
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="vertical_left" parent="vertical">
        <item name="android:gravity">left</item>
    </style>

    <style name="horizontal" parent="base_style">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="horizontalCenter" parent="horizontal">
        <item name="android:gravity">center</item>
    </style>

    <style name="text_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>
    <style name="text_small_orange" parent="text_small">
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="text_giant_orange" parent="text_small_orange">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text_small_right" parent="text_small">
        <item name="android:gravity">right</item>
    </style>

    <style name="text_medium" parent="text_small">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_medium_right" parent="text_medium">
        <item name="android:gravity">right</item>
    </style>

    <style name="check_box">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/colorLight</item>
        <item name="android:checked">true</item>
    </style>
    <style name="check_box.small">
        <item name="android:scaleX">0.9</item>
        <item name="android:scaleY">0.9</item>
        <item name="marginHorizontal">1dp</item>
        <item name="android:paddingLeft">-5dp</item>
    </style>

    <style name="h1" parent="base_style">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="orange_h1" parent="h1">
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="h2" parent="base_style">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="outer_block" parent="base_style">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/my_shape</item>
    </style>

    <style name="inner_block" parent="vertical">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/my_shape_dark</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!--Красивый editText-->
    <style name="niceEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:gravity">center</item>
        <item name="elevation">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:background">@drawable/edit_text_field</item>
    </style>

    <style name="niceEdit.orange" parent="niceEdit">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorOrange</item>
    </style>

    <style name="dialogLinearSpinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:scrollbarSize">22dp</item>
        <item name="android:minWidth">200dp</item>
<!--        <item name="android:spinnerMode">dialog</item>-->
    </style>

    <style name="DialogButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/my_button_shape_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:text">OK</item>
    </style>

    <!--*********************************************************************************************-->
    <!--Для ввода значений, когда по бокам EditText ещё две кнопки "+" "-"-->
    <style name="niceEdit.dark" parent="niceEdit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/value_edit_text_field_rounded</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="dialogLinearEditSquare">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/value_edit_text_field_rect</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="dialogLinearEditLeft" parent="dialogLinearEditSquare">
        <item name="android:text">-</item>
        <item name="android:background">@drawable/value_edit_button_left_selector</item>
        <item name="android:layout_weight">0</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <style name="dialogLinearEditRight" parent="dialogLinearEditLeft">
        <item name="android:text">+</item>
        <item name="android:background">@drawable/value_edit_button_right_selector</item>
    </style>
    <style name="dialogLinearEditDecimal" parent="dialogLinearEditSquare">
        <item name="android:inputType">numberDecimal</item>
    </style>
</resources>